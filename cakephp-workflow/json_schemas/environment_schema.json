{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Cakephp workflow environments",
    "description": "List of environments",
    "type": "object",
    "properties": {
        "url": {
            "description": "Cakephp URL",
            "type": "string"
        },
        "user": {
            "description": "Server's user",
            "type": "string"
        },
        "group": {
            "description": "Server's group",
            "type": "string"
        },
        "hosts": {
            "description": "hosts list",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "cpworkflow_dir": {
            "description": "server's src directory",
            "type": "string",
            "pattern": "^/.*/$"
        },
        "public_dir": {
            "description": "server's public directory",
            "type": "string",
            "pattern": "^/.*/$"
        },
        "dbname": {
            "description": "cakephp' database name",
            "type": "string"
        },
        "dbuser": {
            "description": "cakephp' database user",
            "type": "string"
        },
        "dbpassword": {
            "description": "cakephp' database password",
            "type": "string"
        },
        "dbhost": {
            "description": "cakephp' datbase host",
            "type": "string"
        },
        "command_prefixes": {
            "description": "command prefixes' list",
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        }
    },
    "required": [
        "url", "user", "group", "hosts", "public_dir", "cpworkflow_dir",
        "command_prefixes", "dbname", "dbuser", "dbpassword", "dbhost"
    ]
}
